{
    "name": "tenkawa-php",
    "displayName": "Tenkawa PHP",
    "description": "Autocompletion for PHP",
    "version": "0.0.12",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tsufeki/vscode-tenkawa-php.git"
    },
    "publisher": "tsufeki",
    "keywords": [
        "php",
        "autocompletion",
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:php",
        "workspaceContains:**/*.php"
    ],
    "main": "./out/extension",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "composer:install": "composer install --no-dev --no-interaction --classmap-authoritative",
        "composer:update": "composer update --no-dev --no-interaction --classmap-authoritative"
    },
    "dependencies": {
        "vscode-languageclient": "^4.0.0"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^9.6.2"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Tenkawa PHP configuration",
            "properties": {
                "tenkawaphp.executablePath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "The path to a PHP >=7.0 executable."
                }
            }
        }
    }
}
