{
    "name": "tenkawa-php",
    "displayName": "Tenkawa PHP",
    "description": "Autocompletion for PHP",
    "version": "0.3.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/tsufeki/vscode-tenkawa-php.git"
    },
    "homepage": "https://github.com/tsufeki/tenkawa-php-language-server",
    "bugs": {
        "url": "https://github.com/tsufeki/tenkawa-php-language-server/issues"
    },
    "publisher": "tsufeki",
    "keywords": [
        "php",
        "autocompletion",
        "static analysis",
        "refactoring",
        "multi-root ready"
    ],
    "icon": "images/tenkawa-logo.png",
    "galleryBanner": {
        "color": "#EFF1F3",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:php",
        "workspaceContains:**/*.php"
    ],
    "main": "./out/extension",
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "composer:install": "composer install --no-dev --no-interaction --classmap-authoritative --prefer-dist && php ./vendor/bin/tenkawa.php --build-index --log-stderr",
        "composer:update": "composer update --no-dev --no-interaction --classmap-authoritative --prefer-dist"
    },
    "dependencies": {
        "vscode-languageclient": "^5.1.0"
    },
    "devDependencies": {
        "@types/node": "^7.0.70",
        "typescript": "^3.1.2",
        "vsce": "^1.51.1",
        "vscode": "^1.1.21"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Tenkawa PHP configuration",
            "properties": {
                "tenkawaphp.executablePath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "The path to a PHP >=7.0 executable. Requires restart."
                },
                "tenkawaphp.diagnostics.phpstan.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable PHPStan diagnostics. Currently requires restart."
                },
                "tenkawaphp.completion.autoImport": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable automatic import (use) of completed classes. Currently requires restart."
                },
                "tenkawaphp.verbose": {
                    "type": "boolean",
                    "default": false,
                    "description": "Turn on verbose logging. Requires restart."
                }
            }
        }
    }
}
